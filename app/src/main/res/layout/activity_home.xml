<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header with Profile -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/bg_movie_card"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile"/>

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/ivProfile"
                    android:text="Welcome Back, Osysyy"
                    android:textColor="@color/white_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/outfit"/>
            </RelativeLayout>

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:boxBackgroundColor="@color/dark_gray"
                app:boxStrokeColor="@color/gray_outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search your favourite movie"
                    android:textColorHint="@color/gray_hint_text"
                    android:textColor="@color/white_text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Coming Soon Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvComingSoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coming Soon"
                    android:textColor="@color/white_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/outfit"/>

                <TextView
                    android:id="@+id/tvSeeAllMovies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="See all"
                    android:textColor="@color/red_button"
                    android:fontFamily="@font/outfit"/>
            </RelativeLayout>

            <!-- Movie Card - Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Resident Evil Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_marginEnd="16dp"
                        app:cardBackgroundColor="@color/dark_gray"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivMoviePoster1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/resident_evil_poster" />

                            <!-- Movie Info Overlay -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="#80000000"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvMovieTitle1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Resident Evil - Racoon City"
                                    android:textColor="@color/white_text"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/outfit"/>

                                <TextView
                                    android:id="@+id/tvReleaseDate1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="November 2021"
                                    android:textColor="@color/gray_hint_text"
                                    android:fontFamily="@font/outfit"/>

                                <RatingBar
                                    android:id="@+id/ratingBar1"
                                    style="?attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:progressTint="@color/yellow_rating"
                                    android:rating="4.9"
                                    android:stepSize="0.1"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Spiderman Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="@color/dark_gray"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivMoviePoster2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/spiderman_poster" />

                            <!-- Movie Info Overlay -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="#80000000"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvMovieTitle2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Spider-Man: No Way Home"
                                    android:textColor="@color/white_text"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/outfit"/>

                                <TextView
                                    android:id="@+id/tvReleaseDate2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="December 2021"
                                    android:textColor="@color/gray_hint_text"
                                    android:fontFamily="@font/outfit"/>

                                <RatingBar
                                    android:id="@+id/ratingBar2"
                                    style="?attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:progressTint="@color/yellow_rating"
                                    android:rating="4.8"
                                    android:stepSize="0.1"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Cinema Near You Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvCinemaNearYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cinema Near You"
                    android:textColor="@color/white_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/outfit"/>

                <TextView
                    android:id="@+id/tvSeeAllCinemas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="See all"
                    android:textColor="@color/red_button"
                    android:fontFamily="@font/outfit"/>
            </RelativeLayout>

            <!-- Cinema List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/dark_gray"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/viva_cinema"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VIVA CINEMAS"
                            android:textColor="@color/white_text"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/outfit"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5.2 Kilometers"
                            android:textColor="@color/gray_hint_text"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/outfit"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Closed 10:00 PM"
                            android:textColor="@color/red_button"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/outfit"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SingleStarRating"
                            android:numStars="1"
                            android:rating="1"
                            android:isIndicator="true"
                            android:progressTint="@color/yellow_rating"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9"
                            android:textColor="@color/yellow_rating"
                            android:textSize="14sp"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/outfit"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Cinema -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/dark_gray"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ebonylife_cinema"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EBONYLIFE CINEMA"
                            android:textColor="@color/white_text"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/outfit"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6.5 Kilometers"
                            android:textColor="@color/gray_hint_text"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/outfit"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Closed 08:00 PM"
                            android:textColor="@color/red_button"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/outfit"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SingleStarRating"
                            android:numStars="1"
                            android:rating="1"
                            android:isIndicator="true"
                            android:progressTint="@color/yellow_rating"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0"
                            android:textColor="@color/yellow_rating"
                            android:textSize="14sp"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/outfit"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        app:elevation="8dp"
        app:itemIconTint="@drawable/bottom_nav_color_selector"
        app:itemTextColor="@drawable/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>